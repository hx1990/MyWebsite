<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style media="screen">
      h2 { text-align: center}
    .shadow {position:fixed; width:100%; height:100%; background:#000; opacity:0.3; filter:alpha(opacity:30); left:0; top: 0;}
    .mod_dialog {width:400px; height:400px; border:1px solid black; background:#fff; position:fixed; left:50%; top:50%; margin-left:-200px; margin-top:-200px}
    .top-wrap a {padding:20px; background:#ccc ; text-decoration: none}
    .top-wrap a:hover { background:yellow; text-decoration: none}
    .content-wrap { margin-top: 50px;}
    </style>
    <title></title>
  </head>
  <body>
    <div class="page">
      <% include components/top.inc.ejs %>
      <div class="content-wrap">
        <div>
          <h5>添加一条数据</h5>
          <form action="?" method="post" >
            月份：<input type="text" name="month" /><br>
            开始体重：<input type="text" name="startWeight" /><br>
            结束体重：<input type="text" name="endWeight" /><br>
            目标体重：<input type="text" name="target" /><br>
            完成情况：<input type="text" name="performance" /><br>
            <input type="submit" value="添加"/>
          </form>
        </div>
        <table border="1" width="100%">
          <thead>
            <tr>
              <th>ID</th>
              <th>月份</th>
              <th>开始体重</th>
              <th>结束体重</th>
              <th>目标体重</th>
              <th>完成情况</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0;i<sport.length;i++){ %>
            <tr>
              <td><%=sport[i].ID%></td>
              <td><%=sport[i].month%></td>
              <td><%=sport[i].startWeight%></td>
              <td><%=sport[i].endWeight%></td>
              <td><%=sport[i].target%></td>
              <td><%=sport[i].performance%></td>
              <td>
                <a href="?act=mod&id=<%=sport[i].ID%>">修改</a>
                <a href="?act=del&id=<%=sport[i].ID%>" onclick="return confirm('你真的要删吗？')">删除</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <% if(typeof mod_data!='undefined'){ %>
        <div class="shadow"></div>
        <div class="mod_dialog">
          <h5>修改数据</h5>
          <form action="?" method="post" >
            <input type="hidden" name="mod_id" value="<%= mod_data.ID %>" />
            月份：<input type="text" name="month" value="<%= mod_data.month %>"/><br>
            开始体重：<input type="text" name="startWeight" value="<%= mod_data.startWeight %>"/><br>
            结束体重：<input type="text" name="endWeight" value="<%= mod_data.endWeight %>"/><br>
            目标体重：<input type="text" name="target" value="<%= mod_data.target %>"/><br>
            完成情况：<input type="text" name="performance" value="<%= mod_data.performance %>"/><br>
            <input type="submit" value="修改"/>
            <a href="/admin/monthlyplan">取消修改</a>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>

